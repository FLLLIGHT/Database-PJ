<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>accountServlet</servlet-name>
        <servlet-class>fudan.database.project.controller.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>accountServlet</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>chiefNurseServlet</servlet-name>
        <servlet-class>fudan.database.project.controller.ChiefNurseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>chiefNurseServlet</servlet-name>
        <url-pattern>/chiefNurse/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>emergencyNurseServlet</servlet-name>
        <servlet-class>fudan.database.project.controller.EmergencyNurseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emergencyNurseServlet</servlet-name>
        <url-pattern>/emergency/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>wardNurseServlet</servlet-name>
        <servlet-class>fudan.database.project.controller.WardNurseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wardNurseServlet</servlet-name>
        <url-pattern>/ward/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>doctorServlet</servlet-name>
        <servlet-class>fudan.database.project.controller.DoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doctorServlet</servlet-name>
        <url-pattern>/doctor/*</url-pattern>
    </servlet-mapping>
</web-app>
